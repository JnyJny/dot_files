# bashpy

function rmvenv() {
    VENV_ROOT=$HOME/.venv
    pushd $HOME/.venv
    rm -rf $@ >& /dev/null
    popd
}

function venv() {
    VENV_ROOT=$HOME/.venv
    VENV="$VENV_ROOT/$1"

    # create ~/.venv 
    if [[ ! -d $VENV_ROOT ]]; then
	mkdir $VENV_ROOT
	return
    fi

    # list available venv's
    if [[ ${@} == "" ]]; then
	/bin/ls -C1 $VENV_ROOT
	return
    fi

    # activate an existing venv
    if [[ -d ${VENV} ]]; then
	source $VENV/bin/activate
	return
    fi

    # create, activate and update pip in a new venv
    python3 -m venv $VENV
    source $VENV/bin/activate
    pip -qqq install --upgrade pip
}

