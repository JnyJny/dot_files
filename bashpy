# bashpy

function activate {
    if [[ -d .venv ]]; then
	source .venv/bin/activate
	return
    fi
    P=`basename $PWD`
    python3 -m venv --symlink --prompt ${P:0:3} .venv
    source .venv/bin/activate
    pip install -U pip
    if [[ -x ~/.pyreqs ]]; then
        pip install -r ~/.pyreqs
    fi
}

export PYTHONDONTBYTECOMPILE=1
